<div class="container d-block">
  <div class="row mt-4">
    <div class="col">
      <div class="card">
        <h3 class="text-center p-4">Interview {{idInterview}}</h3>
      </div>
      <div class="card" id="contTextArea">
        <div id= "text_html">
        {{#each interview as |portion|}}
        <span name="portion">{{portion}}</span><br>
        {{/each}}
        </div>
      </div>
    </div>
    <div class="col col-lg-4">
      <div class="card">
        <div class="card-body">
          <div>
            <h3 class="text-center p-3">Add new tag</h3>
          </div>
          <form action="/tags/add" method="POST">
            <div class="form-group">
              <input type="text" class="form-control" name="title" placeholder="Title" autofocus>
            </div>
            <div class="form-group">
              <textarea name="contents" class="form-control" rows="2" placeholder="content" id="result"></textarea>
            </div>
            <div class="form-group">
              <input type="text" class="form-control" name="anotations" placeholder="anotations">
            </div>
            <div class="form-group">
              <label for="selectedColor">Proximo color de etiqueta</label>
              <input type="color" name="selectedColor" id="selectedColor" class="form-control" placeholder="#ff0000"
                aria-describedby="ariaColor" value="#ff0000">
              <small id="ariaColor" class="text-muted">#ff0000</small>
            </div>
            <button class="btn btn-success">
              Save
            </button>
          </form>
        </div>

        <div class="form-group" id="addColor">
          <button>Tag</button>
        </div>
      </div>
    </div>
  </div>
</div>

<script src="/scripts/interviews/all.js">
</script>