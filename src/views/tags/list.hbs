<div class="container p-4">
    <div class="row">
        {{#each tags}}
        <div class="col-md-3">
            <div class="card text-center">
                <div class="card-body">
                    <h3 class="card-title text-uppercase">
                        {{title}}
                    </h3>
                    <p class="m-2">{{contents}}</p>
                    <p class="m-2">{{anotations}}</p>
                    <a href="/tags/delete/{{id}}" class="btn btn-danger">Delete tag</a>
                    <a href="/tags/edit/{{id}}" class="btn btn-secondary">Edit</a>
                </div>
            </div>
        </div>
        {{else}}
            <div class="col-md-4 mx-auto">
                <div class="card cardbody text-center">
                    <p>There are no tags saved yet</p>
                    <a href="/tags/add">Create one!</a> 
                </div>
            </div>
        {{/each}}

    </div>
</div>